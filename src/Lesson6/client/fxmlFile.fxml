<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Styles.css?>
<?import java.net.URL?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="Lesson6.client.Controller">
<stylesheets><URL value="@/Lesson6/client/css/Style.css"/> </stylesheets>
<TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
<HBox>
    <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение.." HBox.hgrow="ALWAYS" />
    <Button fx:id="btn" onAction="#sendMsg" text="Send" />
</HBox>
</VBox>
